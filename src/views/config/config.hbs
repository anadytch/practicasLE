<div class="row">
    <div class="col-md-8">
        <h3>Configuraciones</h3>
    </div>
    <div class="col-md-2">
        <a class="btn btn-primary btn-block">Enviar</a>
    </div>
    <div class="col-md-2">
        <a class="btn btn-primary btn-block">Guardar</a>
    </div>
</div>
<hr class="my-4 bg-secondary">
<div class="row">
    <!-- mostrar los imput de configuración -->
    <div class="col-md-6">
        <div class="form-group">
            <label for="emailConfig">Email</label>
            <input type="email" class="form-control" id="emailConfig" aria-describedby="emailHelp" placeholder="Ingrese su Email">
            <small id="emailHelp" class="form-text text-muted">Ingresa el email al que se le enviará el reporte del día.</small>
        </div>
        <div class="form-group">
            <label for="emailConfig">Asunto del Correo</label>
            <input type="email" class="form-control" id="emailConfig" aria-describedby="emailHelp" placeholder="Ingrese el asunto">
            <small id="emailHelp" class="form-text text-muted">Por defecto: "Reporte del día".</small>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="exampleTextarea">Mensaje del Correo</label>
            <textarea class="form-control" id="exampleTextarea" rows="3" style="margin-top: 0px; margin-bottom: 0px; height: 78px;"></textarea>
            <small id="emailHelp" class="form-text text-muted">Por defecto: Se enviara el reporte del día.</small>
        </div>
    </div>
</div>