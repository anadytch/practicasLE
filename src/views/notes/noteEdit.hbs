<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h4>Editar nota</h4>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{documents._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="tituloNote" placeholder="Ingrese el título" class="form-control" value="{{documents.tituloNote}}">
                </div>
                <div class="form-group">
                    <textarea name="descripcionNote" cols="30" class="form-control" placeholder="Descripción">{{documents.descripcionNote}}</textarea>
                </div>
                <button type="submit" class="btn btn-info btn-block">Editar</button>
            </form>
        </div>
    </div>
</div>