<div class="row">
    <div class="col-md-10">
        <h3>Lista de Notas</h3>
    </div>
    <div class="col-md-2">
        <a href="/notes/add" class="btn btn-primary btn-block">Nueva Nota</a>
    </div>
</div>
<hr class="my-4 bg-secondary">
<div class="row">
    {{#each noteList}}
    <div class="col-md-3">
        <div class="card bg-light mb-3">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{ tituloNote }}
                    <a href="/notes/edit/{{id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>
                    {{ descripcionNote}}
                </p>
                <form action="/notes/delete/{{id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-warning btn-block btn-sm">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <p class="lead"> No hay notas a√∫n.</p>
            <a href="/notes/add" class="btn btn-success btn-block">Nueva nota</a>
        </div>
    </div>
    {{/each}}
</div>