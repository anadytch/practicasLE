<div class="row">
    <div class="col-md-10">
        <h3>Control de Informes </h3>
    </div>
    <div class="col-md-2">
        <a href="" class="btn btn-primary btn-block" data-toggle="modal" data-target="#newInforme"> Nuevo </a>
    </div>
</div>
<hr class="my-4 bg-secondary">
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover table-sm table_español tableinforme_DataTables" >
            <thead class="thead-dark">
                <tr>
                    <th>N°</th>
                    <th>Titulo</th>
                    <th>Nro</th>
                    <th>Descripción</th>
                    <th>Fecha</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody id="tbodyInforme">
                <!-- Listar con public/js/ajaxInforme.js -->
            </tbody>
        </table>
    </div>
</div>


<!-- Modal de nuevo Informe -->
<div class="modal fade" id="newInforme" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="/informe/add" method="POST" enctype="multipart/form-data">
            <div class="modal-header">
                <h5 class="modal-title">Registrar nuevo Informe</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label for="numInforme" class="col-sm-6 col-form-label">Nro. de informe del dia :
                    </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="numInforme" id="numInforme" value="{{numInforme}}" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="tituloInforme" id="tituloInforme" placeholder="Ingrese un título">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="descripcionInforme" id="descripcionInforme" rows="3"
                        placeholder="Ingrese una descripción"></textarea>
                </div>
                <div class="form-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="informeUser" name="informeUser">
                        <label class="custom-file-label" for="customFile">Subir archivo PDF</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btn-newInforme" class="btn btn-primary btn-block">Guardar</button>
            </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de editar Informe -->
<div class="modal fade" id="editInforme" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="" method="POST" enctype="multipart/form-data" id="formEditInforme">
            <input type="hidden" name="_method" value="PUT">
            <input type="hidden" name="idInforme" id="idInforme">
            <div class="modal-header">
                <h5 class="modal-title">Editar Informe</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label for="numInforme" class="col-sm-6 col-form-label">Nro. de informe del dia :
                    </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="editNumInforme" id="editNumInforme" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="editTituloInforme" id="editTituloInforme" placeholder="Ingrese un título">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="editDescripcionInforme" id="editDescripcionInforme" rows="3"
                        placeholder="Ingrese una descripción"></textarea>
                </div>
                <div class="form-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="informeUser" name="informeUser">
                        <label class="custom-file-label" for="customFile">Subir archivo PDF</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btn-editInforme" class="btn btn-primary btn-block">Guardar Cambios</button>
            </div>
            </form>
        </div>
    </div>
</div>