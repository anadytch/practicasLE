<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h4 class="text-center">Editar área</h4>
        </div>
        <div class="card-body">
            <form action="/areas/edit/{{id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <input type="hidden" name="idArea" value="{{id}}">
                <div class="form-group">
                    <input type="text" name="tituloArea" placeholder="Ingrese el nombre del area" class="form-control"
                        value="{{tituloArea}}">
                </div>
                <div class="form-group">
                    <textarea name="descripcionArea" cols="30" placeholder="Ingrese un descripción"
                        class="form-control">{{descripcionArea}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Editar</button>
            </form>
        </div>
    </div>
</div>
</div>