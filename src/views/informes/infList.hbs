<div class="row">
    <div class="col-md-10">
        <h3>Lista de Areas</h3>
    </div>
    <div class="col-md-2">
        <a href="/informe/listPersonal" class="btn btn-primary btn-block"> Nuevo </a>
    </div>
</div>
<hr class="my-4 bg-secondary">
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover table-sm">
            <caption>Areas Habilitadas</caption>
            <thead class="thead-dark">
                <tr>
                    <th>N°</th>
                    <th>Título</th>
                    <th>Número</th>
                    <th>Descripción</th>
                    <th>Usuario</th>
                    <th>Fecha</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                {{#each informes}}
                <tr>
                    <th> {{ i }} </th>
                    <th>{{tituloInforme }}</th>
                    <th>{{numInforme }}</th>
                    <th>{{descripcionInforme}}</th>
                    <th>{{userInforme}}</th>
                    <th>{{fechaInforme}}</th>
                    <th>
                        <div class="btn-group btn-group-sm">
                            <a href="/informe/listPersonal/{{id}}" class="btn btn-success" role="button">
                            <i class="fas fa-check"></i></a>
                            <form action="/informe/delete/{{id}}?_method=DELETE" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>
                            </form>
                            <a href="/informe/edit/{{id}}" class="btn btn-info" role="button"><i class="fas fa-edit"></i></a>
                        </div>
                    </th>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</div>