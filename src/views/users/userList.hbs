<div class="row">
    <div class="col-md-10">
        <h3>Lista de Usuarios </h3>
    </div>
    <div class="col-md-2">
        <a href="" class="btn btn-primary btn-block" data-toggle="modal" data-target="#nuevoUsers"> Nuevo </a>
    </div>
</div>
<hr class="my-4 bg-secondary">
<table class="table table-striped table-hover table-sm responsive tableUser_DataTables">
    <thead>
        <tr>
            <th>N°</th>
            <th>DNI.</th>
            <th>Nombre y apellidos</th>
            <th>Area</th>
            <th>Perfil</th>
            <th>Ultimo login</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        <!-- listar a los users desde ajaxUser.js -->
    </tbody>
    <tfoot>
        <tr>
            <th>N°</th>
            <th>DNI.</th>
            <th>Nombre y apellidos</th>
            <th>Area</th>
            <th>Perfil</th>
            <th>Ultimo login</th>
            <th>Acción</th>
        </tr>
    </tfoot>
</table>

<!-- Modal -->
<div class="modal fade" id="nuevoUsers" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="/users/signUp" method="POST" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title">Registrar nueva area</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="imagenPrevia">
                        <img src="/img/user-default.png" alt="logos de legendary evolution" width="90" height="90"
                            class="rounded-circle mx-auto d-block mb-3">
                    </div>
                    <div class="form-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="customFile" name="fotoUser">
                            <label class="custom-file-label" for="customFile">Selecione una imagen de perfil</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" name="dniUser" placeholder="Ingrese su DNI"
                                    value="{{dniUsers}}">
                            </div>
                            <div class="col">
                                <select class="custom-select" name="perfilUser">
                                    <option selected>Selecciona su perfil</option>
                                    <option value="1">Administrador</option>
                                    <option value="0">Usuario</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="nombreUser"
                            placeholder="Ingrese su nombre y apellidos" value="{{nombreUsers}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="emailUser"
                            placeholder="Ingrese su usuario" value="{{emailUsers}}">
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <input type="password" class="form-control" name="passwordUser"
                                    placeholder="Ingrese su contraseña" value="{{passwordUser}}">
                            </div>
                            <div class="col">
                                <input type="password" class="form-control" name="passwordUserConfirm"
                                    placeholder="Confirme su contraseña">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <select class="custom-select" name="areaUser">
                            <option selected>Selecciona su área</option>
                            {{#each area}}
                            <option value="{{tituloArea}}">{{tituloArea}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>